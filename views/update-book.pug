extends layout

block content
    h1 Update Book

    include form-error

    form(action=`/books/${book.id}`, method="post")
        include new-book
        p
           input(type="submit" value="Update Book")
        p
            a.button(href='/books/page/0') Cancel
        p
            a.button(href=`/books/${book.id}/delete`) Delete Book