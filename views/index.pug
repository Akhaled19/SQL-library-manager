extends layout

block content
    h1 Library Application
    p
        a.button(href='/books/new') Create New Book
    form.search-form(action="/books", method="post")
        input.search-input(type="text",placeholder="title,author etc..." name='query')
        button.search-submit(type="submit") Search
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year   
        tbody
            each book in books  
                tr
                    td
                        a(href=`/books/${book.id}`) #{book.title} 
                    td #{book.author}
                    td #{book.genre}
                    td #{book.year}
    if query
        include search-pagination
    else             
        include pagination